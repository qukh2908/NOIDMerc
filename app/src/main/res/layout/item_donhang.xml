<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/txt_namekh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thong tin khach hang"
                android:gravity="left"
                android:layout_span="2"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txt_giadh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gia tien don hang"
                android:gravity="right"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/txt_madh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ma don hang"
                android:gravity="left"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="time tao don"
                android:gravity="left"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/txt_tinhtrangdh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tinh trang don hang"
                android:gravity="right"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="19sp" />
        </TableRow>
    </TableLayout>

</androidx.cardview.widget.CardView>