<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#b5ead7"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Chi Tiết Đơn Hàng"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_md"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MÃ đơn"
                android:textColor="#0000FF"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_tt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="trạng thái dơn"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="right"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_tenkh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên KH"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txt_sdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SDT"
                android:textSize="20dp"
                android:gravity="right"
                android:textColor="@color/black"/>

        </TableRow>
        <TextView
            android:id="@+id/txt_diachi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dịa chỉ"
            android:textSize="20dp"
            android:textColor="@color/black"/>

         </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiết đơn hàng:"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:paddingTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="415dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="0dp"
        android:layout_marginEnd="@dimen/material_emphasis_disabled_background">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phí vận chuyển:"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/txt_phigiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tiền vận chuyển"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="right"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giảm giá:"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txt_giam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tien giam"
                    android:textSize="15dp"
                    android:gravity="right"
                    android:textColor="@color/black"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng:"
                android:textSize="20dp"
                android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txt_tong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="tổng tiền"
                    android:textColor="@color/black"

                    android:textSize="20dp"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="0dp">


        <Button
            android:id="@+id/btn_xacnhan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_rounded"
            android:text="HOÀN THÀNH" />

        <Button
            android:id="@+id/btn_huy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_rounded"
            android:text="HỦY" />

    </LinearLayout>

</LinearLayout>